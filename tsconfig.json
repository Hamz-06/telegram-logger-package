{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "declaration": true,
  },
  "include": [
    "telegram-logger-pkg/src",
    "__tests__"
  ],
  "exclude": [
    "node_modules"
  ],
}